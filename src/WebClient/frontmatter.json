{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.content.publicFolder": "[[workspace]]/src/WebClient/public",
  "frontMatter.framework.id": "next",
  "frontMatter.framework.startCommand": "npm run dev",
  "frontMatter.preview.host": "http://localhost:3000/blog",
  "frontMatter.website.host": "https://victorfrye.com/blog",
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "default",
      "pageBundle": false,
      "previewPath": null,
      "fields": [
        {
          "title": "Title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "Subtitle",
          "name": "subtitle",
          "type": "string"
        },
        {
          "title": "Description",
          "name": "description",
          "type": "string"
        },
        {
          "title": "Publishing date",
          "name": "date",
          "type": "datetime",
          "default": "{{now}}",
          "isPublishDate": true
        },
        {
          "title": "Last modified date",
          "name": "lastModified",
          "type": "datetime",
          "default": "{{now}}",
          "isModifiedDate": true
        },
        {
          "title": "Banner image",
          "name": "image",
          "type": "image"
        },
        {
          "title": "Is in draft",
          "name": "draft",
          "type": "draft",
          "default": false
        },
        {
          "title": "Tags",
          "name": "tags",
          "type": "tags"
        }
      ]
    }
  ],
  "frontMatter.content.pageFolders": [
    {
      "title": "posts",
      "path": "[[workspace]]/src/WebClient/content/blog"
    }
  ],
  "frontMatter.git.enabled": true
}
