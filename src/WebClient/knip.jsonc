{
	"$schema": "https://unpkg.com/knip@5/schema-jsonc.json",
	"entry": [
		// Next.js convention files using .tsx extension (knip's Next.js plugin only matches .ts)
		"app/robots.tsx",
		"app/sitemap.tsx",
		// Root MDX component mapping required by @next/mdx
		"mdx-components.tsx"
	],
	"ignoreDependencies": [
		// Referenced as string literals in next.config.ts webpack function
		"@griffel/webpack-loader",
		"@svgr/webpack",
		// Ambient type declarations for gtag global
		"@types/gtag.js",
		// Used by Jest to parse TypeScript config (jest.config.ts)
		"ts-node"
	],
	"ignoreExportsUsedInFile": true
}
